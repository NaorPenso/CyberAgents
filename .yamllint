---
extends: default

rules:
  document-start:
    present: true
  line-length:
    max: 100
    level: warning
  comments:
    min-spaces-from-content: 1
    level: warning
  comments-indentation:
    level: warning
  truthy:
    check-keys: false
  indentation:
    spaces: 2
    indent-sequences: true
