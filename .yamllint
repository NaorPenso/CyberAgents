---
extends: default

# Ignore node_modules and npm-related directories
ignore: |
  node_modules/
  npm/
  .npm/

rules:
  document-start:
    present: true
  line-length:
    max: 100
    level: warning
  comments:
    min-spaces-from-content: 1
    level: warning
  comments-indentation:
    level: warning
  truthy:
    check-keys: false
  indentation:
    spaces: 2
    indent-sequences: true
