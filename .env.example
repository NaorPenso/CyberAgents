# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True

# Example environment variables for CyberAgents

# --- LLM Provider Selection (Priority: Cerebras > Ollama > OpenAI) ---
# Set ONE of the following to true to choose the LLM provider.
# USE_CEREBRAS_LLM="false"
# USE_LOCAL_LLM="false"
# If both above are false or unset, OpenAI will be used by default.

# --- Cerebras Configuration (used if USE_CEREBRAS_LLM=true) ---
# CEREBRAS_API_BASE="https://api.cerebras.ai/v1"
# CEREBRAS_API_KEY="YOUR_CEREBRAS_API_KEY"
# CEREBRAS_MODEL_NAME="llama-3.3-70b" # Example model
# Optional Cerebras parameters
# CEREBRAS_STREAMING="false"
# CEREBRAS_MAX_TOKENS=

# --- Ollama Configuration (used if USE_LOCAL_LLM=true and USE_CEREBRAS_LLM=false) ---
# OLLAMA_BASE_URL="http://localhost:11434/v1"
# OLLAMA_MODEL="phi:latest"

# --- OpenAI Configuration (used if USE_CEREBRAS_LLM=false and USE_LOCAL_LLM=false) ---
# OPENAI_API_KEY="YOUR_OPENAI_API_KEY" # Required if using OpenAI
# OPENAI_API_BASE= # Optional: Use if you have a proxy/alternative base URL
# OPENAI_MODEL_NAME="o3-mini" # Or your preferred OpenAI model
# Optional OpenAI parameters (can share names with Cerebras if behavior is same)
# CEREBRAS_STREAMING="false" # Set to true for OpenAI streaming
# CEREBRAS_MAX_TOKENS= # Set max tokens for OpenAI

# --- Tool API Keys ---
VIRUSTOTAL_API_KEY="your_vt_api_key" # Required for ThreatIntelAgent
SHODAN_API_KEY="your_shodan_api_key" # Required for Shodan tool in ExposureAnalystAgent

# --- Other Settings ---
MAX_API_REQUESTS_PER_MINUTE=10
# LOG_LEVEL=INFO

# --- Optional Telemetry ---
# OTEL_EXPORTER_OTLP_ENDPOINT="your_otlp_endpoint"

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Allowed CORS Origins (Required for API, comma-separated)
# Example: ALLOWED_ORIGINS="http://localhost:3000,https://yourfrontend.com"
ALLOWED_ORIGINS=""

# OpenTelemetry Endpoint (Optional, for exporting traces/metrics)
# OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4317"
