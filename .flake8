[flake8]
# Exclude only third-party code and dependencies
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    **/site-packages,
    .pytest_cache,
    .mypy_cache

# Set maximum line length (matching black's default)
max-line-length = 88

# Ignore specific error codes
ignore = E501

# Set the complexity threshold
max-complexity = 10

# Set the maximum number of blank lines
max-blank-lines = 1

# Set the maximum number of line continuations
max-line-continuations = 1

# Set the maximum number of statements in a function
max-statements = 50

# Set the maximum number of arguments in a function
max-args = 5

# Set the maximum number of local variables in a function
max-locals = 15

# Set the maximum number of branches in a function
max-branches = 12

# Set the maximum number of returns in a function
max-returns = 6

# Set the maximum number of statements in a module
max-module-lines = 1000

# Set the maximum number of statements in a class
max-class-lines = 500

# Set the maximum number of statements in a method
max-method-lines = 50

# Set the maximum number of statements in a function
max-function-lines = 50

# Set the maximum number of statements in a generator
max-generator-lines = 50

# Set the maximum number of statements in a comprehension
max-comprehension-lines = 50

# Set the maximum number of statements in a lambda
max-lambda-lines = 50

# Set the maximum number of statements in a list comprehension
max-list-comprehension-lines = 50

# Set the maximum number of statements in a dict comprehension
max-dict-comprehension-lines = 50

# Set the maximum number of statements in a set comprehension
max-set-comprehension-lines = 50

# Set the maximum number of statements in a generator expression
max-generator-expression-lines = 50

# Set the maximum number of statements in a yield expression
max-yield-expression-lines = 50

# Set the maximum number of statements in a yield from expression
max-yield-from-expression-lines = 50

# Set the maximum number of statements in a await expression
max-await-expression-lines = 50

# Set the maximum number of statements in a async for expression
max-async-for-expression-lines = 50

# Set the maximum number of statements in a async with expression
max-async-with-expression-lines = 50

# Set the maximum number of statements in a async def expression
max-async-def-expression-lines = 50

# Set the maximum number of statements in a async def function
max-async-def-function-lines = 50

# Set the maximum number of statements in a async def method
max-async-def-method-lines = 50

# Set the maximum number of statements in a async def generator
max-async-def-generator-lines = 50

# Set the maximum number of statements in a async def comprehension
max-async-def-comprehension-lines = 50

# Set the maximum number of statements in a async def lambda
max-async-def-lambda-lines = 50

# Set the maximum number of statements in a async def list comprehension
max-async-def-list-comprehension-lines = 50

# Set the maximum number of statements in a async def dict comprehension
max-async-def-dict-comprehension-lines = 50

# Set the maximum number of statements in a async def set comprehension
max-async-def-set-comprehension-lines = 50

# Set the maximum number of statements in a async def generator expression
max-async-def-generator-expression-lines = 50

# Set the maximum number of statements in a async def yield expression
max-async-def-yield-expression-lines = 50

# Set the maximum number of statements in a async def yield from expression
max-async-def-yield-from-expression-lines = 50

# Set the maximum number of statements in a async def await expression
max-async-def-await-expression-lines = 50

# Set the maximum number of statements in a async def async for expression
max-async-def-async-for-expression-lines = 50

# Set the maximum number of statements in a async def async with expression
max-async-def-async-with-expression-lines = 50 